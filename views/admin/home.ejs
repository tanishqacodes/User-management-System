<% include("../layouts/header.ejs") %>
<style>
    * {
      margin: none;
      padding: auto;
      box-sizing: border-box;
      font-family: 'Crimson Text', serif;
    }

    h3 {
      font-weight: bolder;
      /* text-align: center; */
      text-decoration: underline;
      text-shadow: 2px rgb(3, 66, 35);
      font-size: 60px;
      position: relative;
      left: 0;
      padding-left: 100px;
      animation: sideway 10s infinite linear;
    }

    @keyframes sideway {
      from {
        left: 0;
      }

      to {
        left: 450px;
      }
    }

</style>
<h1>Welcome, <%= admin.name %></h1>

<a href="/admin/dashboard">Dashboard</a>

<table style="width: 50%;">

    <tr>
        <td><img src="/userImages/<%= admin.image %>" width="100px" height="100px" alt="<%= admin.image %>"></td>
    </tr>
    <tr>
        <td>Email</td>
        <td><%= admin.email %></td>
    </tr>
    <tr>
        <td>Mobile</td>
        <td><%= admin.mobile %></td>
    </tr>

</table>

<a href="/admin/logout">Logout</a>

<% include("../layouts/footer.ejs") %>